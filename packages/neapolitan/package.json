{
  "name": "neapolitan",
  "description": "Low-level content management system",
  "version": "0.1.0-canary.1",
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kijv/neapolitan.git",
    "directory": "packages/neapolitan"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./tree": {
      "types": "./dist/tree.d.ts",
      "default": "./dist/tree.js"
    },
    "./loaderutils": {
      "types": "./dist/loaderutils.d.ts",
      "default": "./dist/loaderutils.js"
    },
    "./loader": {
      "types": "./dist/loader.d.ts",
      "default": "./dist/loader.js"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "default": "./dist/next.js"
    },
    "./next?*": "./dist/next.js?*",
    "./next/loader/load": {
      "types": "./dist/next/loader/load.d.ts",
      "default": "./dist/next/loader/load.js"
    },
    "./next/loader/transform": {
      "types": "./dist/next/loader/transform.d.ts",
      "default": "./dist/next/loader/transform.js"
    },
    "./next/loader/neapolitan": {
      "types": "./dist/next/loader/neapolitan.d.ts",
      "default": "./dist/next/loader/neapolitan.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "default": "./dist/vite.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && BUILD=1 rolldown -m -c rolldown.config.ts",
    "dev": "rolldown -c rolldown.config.ts --watch"
  },
  "dependencies": {
    "c12": "^3.2.0"
  },
  "devDependencies": {
    "@rolldown/pluginutils": "catalog:bundler",
    "@rollup/pluginutils": "catalog:bundler",
    "next": "^15.4.6",
    "remeda": "^2.30.0",
    "rolldown": "catalog:bundler",
    "rolldown-plugin-dts": "catalog:bundler",
    "rollup": "^4.46.2",
    "rollup-plugin-swc3": "catalog:bundler",
    "vite": "^7",
    "webpack": "^5.101.2"
  },
  "peerDependencies": {
    "next": "^15.4.6",
    "vite": "^7"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  }
}
