{
  "name": "neapolitan-project",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "scripts/*"
    ],
    "catalogs": {
      "bundler": {
        "@rolldown/pluginutils": "1.0.0-rc.4",
        "@rollup/pluginutils": "latest",
        "rolldown": "1.0.0-rc.4",
        "rolldown-plugin-dts": "latest",
        "rollup-plugin-swc3": "latest"
      }
    }
  },
  "scripts": {
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "build": "turbo run build",
    "ci:version": "bun run ./scripts/release/version-packages.ts",
    "ci:publish": "bun run ./scripts/release/publish-npm.ts"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@types/bun": "latest",
    "fast-glob": "^3.3.3",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.12.0",
    "oxlint-tsgolint": "latest",
    "turbo": "^2.8.9"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.3.9"
}
